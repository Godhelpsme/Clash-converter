{
  "name": "clash-config-editor-backend",
  "version": "1.0.0",
  "description": "Backend API for Clash Config Editor",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --test --test-isolation=none --test-concurrency=1 --test-force-exit test/*.test.js",
    "test:coverage": "node --test --test-isolation=none --test-concurrency=1 --test-force-exit --experimental-test-coverage --test-coverage-lines=80 --test-coverage-exclude=validators/* test/*.test.js"
  },
  "keywords": [
    "clash",
    "config",
    "editor"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^8.55.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "js-yaml": "^4.1.0",
    "lru-cache": "^10.2.0",
    "multer": "^1.4.5-lts.1",
    "pino": "^9.0.0",
    "pino-http": "^10.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "supertest": "^7.2.2"
  }
}
